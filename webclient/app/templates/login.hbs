<div class="container">
  <div class="row mt-5p">
    <div class="col-md-4 col-centered">
      <div class="text-center mb-40"><img class="logo" src="assets/images/logo.png" alt="NoteIt"/></div>
      <div class="mb-20">
        {{input-component type="text" className="form-control" name="username" value=username
                          placeholder="Email Address" fieldStatus=emailStatus enter=(action "focus" "password")}}
        {{input-component type="password" className="form-control" name="password" value=password
                          placeholder="Password" fieldStatus=passwordStatus
                          enter=(if showLoginPage (action "login") (action "focus" "cnf_password"))}}
        {{#if showLoginPage}}
          <a href="#" class="btn btn-link pull-right mnt-15 mb-20" {{action "forgotPassword"}}>forgot password?</a>

          <div class="form-group">
            <button class="btn btn-primary btn-block" {{action "login"}}>Log In</button>
          </div>
          <div class="form-group text-center">
            <span class="block-link" {{action "showLoginPage" false}}>
              <span class="text">Don't have an account? </span><span class="blue">Sign Up</span>
            </span>
          </div>
        {{else}}
          {{input-component type="password" className="form-control" name="cnf_password" value=confirmPassword
                            placeholder="Confirm Password" fieldStatus=cnfPasswordStatus enter=(action "signUp")}}
          <div class="form-group mt-30">
            <button class="btn btn-primary btn-block" {{action "signUp"}}>Create Account</button>
          </div>
          <div class="form-group text-center">
            <span class="block-link" {{action "showLoginPage" true}}>
              <span class="">Already have an account? </span><span class="blue">Log In</span>
            </span>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>