<div id="noteEditorModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" {{action "close"}}>&times;</button>
        <h4 class="modal-title">
          {{input id="NEW_NOTE_TITLE" class="input-title" name="title" placeholder="Title"
                  value=note.title}}
        </h4>
      </div>
      <div class="modal-body">
        {{textarea id="NEW_NOTE_CONTENT" value=note.data placeholder="Content..."}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary mr-20"
          {{action (if note.id (action "updateNote" note.id) (action "addNote"))}}>Save
        </button>
        <button type="button" class="btn btn-default" {{action "close"}}>Cancel</button>
      </div>
    </div>
  </div>
</div>
