<div class="container-fluid">
  <div class="row mt-5p">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h3 class="text-center">NoteIt</h3>
      <div class="form-horizontal">
        {{input-component type="password" className="form-control" name="password" value=password
                          placeholder="Password" fieldStatus=passwordStatus}}
        {{input-component type="password" className="form-control" name="cnf_password" value=confirmPassword
                          placeholder="Confirm Password" fieldStatus=cnfPasswordStatus}}
        <div class="form-group mt-30">
          <button class="btn btn-primary btn-block" {{action "resetPassword"}}>Reset Password</button>
        </div>
        <div class="form-group">
          <button class="btn btn-default btn-block" {{action "cancel"}}>Cancel</button>
        </div>
      </div>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>